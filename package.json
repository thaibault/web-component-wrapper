{
  "name": "web-component-wrapper",
  "version": "0.0.25",
  "license": "CC-BY-3.0",
  "description": "Generic web-component base class and framework specific wrapper.",
  "homepage": "https://torben.website/web-component-wrapper",
  "documentationWebsite": {
    "tagline": "Encapsulate your components as web-components.",
    "trackingCode": "TODO"
  },
  "keywords": [
    "component",
    "decouple",
    "encapsulate",
    "isolate",
    "native",
    "web",
    "webcomponent"
  ],
  "files": [
    "index.ts",
    "React.ts",
    "React.js",
    "type.ts"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/web-component-wrapper"
  },
  "scripts": {
    "build": "weboptimizer build",
    "build:export": "weboptimizer build '{__reference__: \"target:export\"}'",
    "check": "yarn check:types; yarn lint",
    "check:types": "weboptimizer check:types",
    "clear": "weboptimizer clear",
    "document": "weboptimizer document",
    "lint": "weboptimizer lint",
    "prepare": "yarn build",
    "report:coverage": "nyc report --reporter=text-lcov | coveralls",
    "serve": "weboptimizer serve",
    "start": "yarn serve",
    "test": "weboptimizer test",
    "test:browser": "weboptimizer test:browser",
    "update": "yarn version --patch && yarn publish",
    "update:documentation": "documentationWebsite --log-level info",
    "watch": "weboptimizer build --watch"
  },
  "devDependencies": {
    "@babel/plugin-transform-proto-to-assign": "*",
    "@types/ejs": "*",
    "@types/html-minifier": "*",
    "@types/jest": "*",
    "@types/jquery": "*",
    "@types/jsdom": "*",
    "@types/loader-utils": "*",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "babel-eslint": "*",
    "clientnode": "*",
    "documentation-website": "*",
    "eslint": "*",
    "eslint-config-google": "*",
    "eslint-plugin-jsdoc": "*",
    "jest": "*",
    "jsdoc": "*",
    "prop-types": "*",
    "react": "*",
    "react-dom": "*",
    "weboptimizer": "*",
    "webpack": "*",
    "webpack-cli": "*",
    "webpack-dev-server": "*"
  },
  "peerDependencies": {
    "@babel/runtime": "*",
    "clientnode": "*",
    "react": "*",
    "react-dom": "*"
  },
  "sideEffects": false,
  "webOptimizer": {
    "commandLine": {
      "test": {
        "environments": [
          "jsdom",
          "node"
        ]
      }
    },
    "injection": {
      "entry": {
        "index": "./index.ts",
        "React": "./React.ts"
      }
    },
    "module": {
      "optimizer": {
        "babelMinify": {
          "#": "To provide a logging output we need to exclude this feature.",
          "__evaluate__": "self.debug ? {bundle: null, module: null} : {bundle: {transform: {removeConsole: false}}, module: {removeConsole: false}}"
        }
      },
      "preprocessor": {
        "javaScript": {
          "#": "Pre-process environment specific module.",
          "exclude": "!filePath.includes('clientnode/property-types') && isFilePathInDependencies(filePath)"
        }
      },
      "replacements": {
        "#": "Pre-process environment specific module.",
        "normal": {
          "clientnode/property-types$": "clientnode/property-types.ts"
        }
      }
    },
    "target:export": {
      "module": {
        "preprocessor": {
          "javaScript": {
            "options": {
              "plugins": {
                "__remove__": "@babel/plugin-transform-runtime"
              }
            }
          }
        }
      }
    }
  }
}
