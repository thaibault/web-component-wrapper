{
  "name": "web-component-wrapper",
  "version": "0.0.132",
  "license": "CC-BY-3.0",
  "description": "Generic web-component base class and framework specific wrapper.",
  "homepage": "https://torben.website/web-component-wrapper",
  "documentationWebsite": {
    "tagline": "Encapsulate your components as web-components.",
    "trackingCode": "TODO"
  },
  "keywords": [
    "component",
    "decouple",
    "encapsulate",
    "isolate",
    "native",
    "web",
    "webcomponent",
    "web-component"
  ],
  "main": "index.js",
  "files": [
    "index.ts",
    "polyfill.html.ejs",
    "React.ts",
    "React.js",
    "ReactNext.js",
    "Web.ts",
    "Web.js",
    "WebNext.js",
    "type.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/web-component-wrapper"
  },
  "scripts": {
    "build": "weboptimizer build && yarn build:next",
    "build:export": "weboptimizer build '{__reference__: \"target:export\"}'",
    "build:next": "weboptimizer build '{__reference__: \"target:next\"}'",
    "check": "yarn check:types; yarn lint",
    "check:types": "weboptimizer check:types",
    "clear": "weboptimizer clear",
    "document": "weboptimizer document",
    "lint": "weboptimizer lint",
    "prepare": "yarn build",
    "report:coverage": "nyc report --reporter=text-lcov | coveralls",
    "serve": "weboptimizer serve",
    "start": "yarn serve",
    "test": "weboptimizer test",
    "test:browser": "weboptimizer test:browser",
    "update": "yarn version --patch && yarn publish",
    "update:documentation": "documentationWebsite --log-level info",
    "watch": "weboptimizer build --watch"
  },
  "devDependencies": {
    "@types/ejs": "*",
    "@types/html-minifier": "*",
    "@types/jest": "*",
    "@types/jquery": "*",
    "@types/jsdom": "*",
    "@types/loader-utils": "*",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/workbox-webpack-plugin": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@webcomponents/webcomponentsjs": "*",
    "babel-eslint": "*",
    "clientnode": "*",
    "documentation-website": "*",
    "eslint": "*",
    "eslint-config-google": "*",
    "eslint-plugin-jsdoc": "*",
    "jest": "*",
    "jsdoc": "*",
    "prop-types": "*",
    "react": "*",
    "react-dom": "*",
    "weboptimizer": "*",
    "webpack-dev-server": "*"
  },
  "peerDependencies": {
    "@babel/runtime": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "clientnode": "*",
    "react": "*",
    "react-dom": "*"
  },
  "sideEffects": false,
  "webOptimizer": {
    "commandLine": {
      "test": {
        "environments": [
          "jsdom"
        ]
      }
    },
    "generic": {
      "supportedBrowsers": [
        "IE >= 11",
        "last 2 versions",
        "> 5%"
      ]
    },
    "injection": {
      "entry": {
        "__evaluate__": "2 < self.givenCommandLineArguments.length && self.givenCommandLineArguments[2].startsWith('test') ? './test.ts' : 2 < self.givenCommandLineArguments.length && self.givenCommandLineArguments[2] === 'serve' ? {clientnode: 'clientnode', index: './index'} : {index: './index.ts', React: './React.ts', Web: './Web.ts'}"
      }
    },
    "module": {
      "optimizer": {
        "babelMinify": {
          "#": "To provide a logging output we need to exclude this feature.",
          "__evaluate__": "self.debug ? {bundle: null, module: null} : {bundle: {transform: {removeConsole: false}}, module: {removeConsole: false}}"
        }
      }
    },
    "target:export": {
      "module": {
        "preprocessor": {
          "javaScript": {
            "options": {
              "plugins": {
                "__remove__": "@babel/plugin-transform-runtime"
              }
            }
          }
        }
      }
    },
    "target:next": {
      "generic": {
        "supportedBrowsers": [
          "browserslist config and supports es6-class"
        ]
      },
      "injection": {
        "entry": {
          "__evaluate__": "{ReactNext: './React.ts', WebNext: './Web.ts'}"
        }
      }
    }
  }
}
